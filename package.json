{
  "name": "querysearch",
  "displayName": "querySearch",
  "description": "%description%",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.83.0"
  },
  "publisher": "yuyakawakamy",
  "repository": {
    "url": "https://github.com/ykawakamy/querySearch"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onFileSystem:memfs"
  ],
  "main": "./dist/extension.js",
  "l10n": "./l10n",
  "icon":"icon.png",
  "contributes": {
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "querySearch",
          "name": "%QueryPanel%"
        },
        {
          "id": "searchResult",
          "name": "%SearchResult%"
        }
      ]
    },
    "commands": [
      {
        "command": "querySearch.openFile",
        "title": "%openFile%",
        "icon": "$(go-to-file)"
      },
      {
        "command": "querySearch.previewFile",
        "title": "%openFile%",
        "icon": "$(go-to-file)"
      },
      {
        "command": "querySearch.replace",
        "title": "%replace%",
        "icon": "$(search-replace)"
      },
      {
        "command": "querySearch.replaceAll",
        "title": "%replaceAll%",
        "icon": "$(search-replace-all)"
      },
      {
        "command": "querySearch.replaceFiles",
        "title": "%replaceFiles%",
        "icon": "$(search-replace-all)"
      },
      {
        "command": "querySearch.copyResult",
        "title": "%copyResult%"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "querySearch.openFile",
          "when": "view == searchResult && viewItem == querySearch.replaceResult",
          "group": "inline"
        },
        {
          "command": "querySearch.replace",
          "when": "view == searchResult && viewItem == querySearch.replaceResult",
          "group": "inline"
        },
        {
          "command": "querySearch.openFile",
          "when": "view == searchResult && viewItem == querySearch.replaceFile",
          "group": "inline"
        },
        {
          "command": "querySearch.replaceAll",
          "when": "view == searchResult && viewItem == querySearch.replaceFile",
          "group": "inline"
        },
        {
          "command": "querySearch.copyResult",
          "when": "view == searchResult"
        }
      ],
      "view/title": [
        {
          "command": "querySearch.replaceFiles",
          "when": "view == searchResult",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "l10n:generate": "npx @vscode/l10n-dev export --outDir ./l10n ./src"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.83.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vscode/l10n-dev": "^0.0.30",
    "@vscode/test-electron": "^2.2.2",
    "eslint": "^8.54.0",
    "glob": "^8.1.0",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "vsce": "^2.15.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.2"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.33",
    "@vscode/l10n": "^0.0.16",
    "html-parser": "file:../html-parser",
    "ignore": "^5.2.4",
    "vscode-uri": "^3.0.7"
  }
}
