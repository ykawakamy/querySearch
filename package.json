{
  "name": "querysearch",
  "displayName": "querySearch",
  "description": "%description%",
  "version": "0.0.7",
  "engines": {
    "vscode": "^1.83.0"
  },
  "publisher": "yuyakawakamy",
  "repository": {
    "url": "https://github.com/ykawakamy/querySearch"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onFileSystem:memfs"
  ],
  "main": "./dist/extension.js",
  "l10n": "./l10n",
  "icon": "icon.png",
  "contributes": {
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "querySearch",
          "name": "%QueryPanel%"
        },
        {
          "id": "searchResult",
          "name": "%SearchResult%"
        }
      ]
    },
    "commands": [
      {
        "command": "querySearch.openFile",
        "title": "%openFile%",
        "icon": "$(go-to-file)"
      },
      {
        "command": "querySearch.previewFile",
        "title": "%openFile%",
        "icon": "$(go-to-file)"
      },
      {
        "command": "querySearch.replace",
        "title": "%replace%",
        "icon": "$(search-replace)"
      },
      {
        "command": "querySearch.replaceAll",
        "title": "%replaceAll%",
        "icon": "$(search-replace-all)"
      },
      {
        "command": "querySearch.replaceFiles",
        "title": "%replaceFiles%",
        "icon": "$(search-replace-all)"
      },
      {
        "command": "querySearch.copyResult",
        "title": "%copyResult%"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "querySearch.openFile",
          "when": "view == searchResult && viewItem == querySearch.result && querysearch.replaceMode == true",
          "group": "inline"
        },
        {
          "command": "querySearch.replace",
          "when": "view == searchResult && viewItem == querySearch.result && querysearch.replaceMode == true",
          "group": "inline"
        },
        {
          "command": "querySearch.openFile",
          "when": "view == searchResult && viewItem == querySearch.file && querysearch.replaceMode == true",
          "group": "inline"
        },
        {
          "command": "querySearch.replaceAll",
          "when": "view == searchResult && viewItem == querySearch.file && querysearch.replaceMode == true",
          "group": "inline"
        },
        {
          "command": "querySearch.copyResult",
          "when": "view == searchResult"
        }
      ],
      "view/title": [
        {
          "command": "querySearch.replaceFiles",
          "when": "view == searchResult",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "cd webview-ui && npm run build && cd .. && webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node --enable-source-maps ./out/test/runTest.js",
    "l10n:generate": "npx @vscode/l10n-dev export --outDir ./l10n ./src"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.83.0",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vscode/l10n-dev": "^0.0.34",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "glob": "^10.3.10",
    "mocha": "^10.3.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "vsce": "^2.15.0",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.35",
    "@vscode/l10n": "^0.0.18",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "html-parser": "file:../html-parser",
    "ignore": "^5.3.1",
    "vscode-uri": "^3.0.8"
  }
}
